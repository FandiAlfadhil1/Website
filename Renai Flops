<script>
$(window).on('load', function() {
   if (navigator.userAgent.match(/(iPod|iPhone|iPad)/)) {
      $('#sb-body-inner').css({
         'overflow': 'scroll', 
         '-webkit-overflow-scrolling': 'touch' 
      }); 
   }
});
</script>

<script>
$(function(){
   var vH = $(".clc_visH img").height();
   var sH = vH * 0.155;
   $(window).scroll(function(){
     var obj = $('.v2_logo');
     scroll = $(window).scrollTop();
    if (scroll > sH) {
      obj.addClass('isSmall');
    } else{
      obj.removeClass('isSmall');
    }
  })
});
</script>

<script>
$(function() {
  size();
  $(window).on("resize", function() {size();});
  function size() {
      var w = $(window).width();
      var x = 480;
      var xtab = 1024;
      if (w <= x) { //以下（スマホ）
         var gH = 30;     
      } else if (w <= xtab) { //タブレット
         var gH = 60;
      } else { //以上（PC）
         var gH = 100;
      }
     var gW = $(window).width();
     var footer = gH - (gH * 2);
     var f_left = gH * 2.182;
     var f_right = gH * 3.52;
     var f_center = gW - (f_left + f_right);
     $("footer").css("margin-top" , footer + "px");
     $("footer .f_inner").css("height" , gH + "px");
     $(".f_inner .f_left").css("width" , f_left + "px");
     $(".f_inner .f_right").css("width" , f_right + "px");
     $(".f_inner .f_center").css("width" , f_center + "px");
  }
});
</script>
 
<!-- ニュースタイトル -->
<script>
$(function(){
   var displayAmount = 10; // 表示させる記事の数 
   $.ajax({
      url: 'news.html',//ニュースページの場所
      cache: false,
      datatype: 'html',
      success: function(html) {
         var h = $(html).find('article');
         for (var i = 0; i < displayAmount; i++) {
            var day = $(h[i]).find('.news_list_day').text(); //更新日
            var title = $(h[i]).find('.title').text(); //記事タイトル
            var href = $(h[i]).find(".title_link"); //リンク先
            var a = $(href).attr("href"); //href取得
            var content = $(
               "<article><a class='title_link' href='" + a + "'><div class='news_day'>" + day +"</div><div class='news_list_title'>" + title + "</div></a></article>"
            );
            $('.newsList_load').append(content); //挿入場所
         }
      }
   });
});
</script>

